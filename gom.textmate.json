{
  "displayName": "Gom",
  "name": "gom",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#statements"
    },
    {
      "include": "#expressions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.gom",
          "match": "//.*$"
        },
        {
          "name": "comment.block.gom",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.import.gom",
          "match": "\\b(import)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*;",
          "captures": {
            "1": {
              "name": "keyword.control.import.gom"
            },
            "2": {
              "name": "string.unquoted.gom"
            }
          }
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "include": "#type-declaration"
        },
        {
          "include": "#function-declaration"
        }
      ]
    },
    "type-declaration": {
      "name": "meta.type.declaration.gom",
      "match": "\\b(type)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=\\s*(.+?)\\s*;",
      "captures": {
        "1": {
          "name": "keyword.declaration.type.gom"
        },
        "2": {
          "name": "entity.name.type.gom"
        },
        "3": {
          "name": "storage.type.gom"
        }
      }
    },
    "function-declaration": {
      "name": "meta.function.declaration.gom",
      "begin": "\\b(function)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "beginCaptures": {
        "1": {
          "name": "keyword.declaration.function.gom"
        },
        "2": {
          "name": "entity.name.function.gom"
        }
      },
      "end": "\\)",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#function-parameters"
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "name": "variable.parameter.gom",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:"
        },
        {
          "include": "#primitive-types"
        },
        {
          "include": "#composite-types"
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "include": "#control-statements"
        },
        {
          "include": "#variable-declaration"
        },
        {
          "include": "#return-statement"
        },
        {
          "include": "#expression-statement"
        }
      ]
    },
    "control-statements": {
      "patterns": [
        {
          "name": "keyword.control.if.gom",
          "match": "\\bif\\b"
        },
        {
          "name": "keyword.control.for.gom",
          "match": "\\bfor\\b"
        },
        {
          "name": "keyword.control.while.gom",
          "match": "\\bwhile\\b"
        },
        {
          "name": "keyword.control.return.gom",
          "match": "\\breturn\\b"
        }
      ]
    },
    "variable-declaration": {
      "name": "meta.variable.declaration.gom",
      "match": "\\b(let|const)\\b",
      "captures": {
        "1": {
          "name": "keyword.declaration.variable.gom"
        }
      }
    },
    "return-statement": {
      "name": "meta.return.gom",
      "match": "\\b(return)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.return.gom"
        }
      }
    },
    "expression-statement": {
      "patterns": [
        {
          "include": "#expressions"
        }
      ]
    },
    "expressions": {
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#string-literal"
        },
        {
          "include": "#numeric-literal"
        },
        {
          "include": "#boolean-literal"
        },
        {
          "include": "#primitive-types"
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#struct-literal"
        },
        {
          "include": "#list-literal"
        }
      ]
    },
    "string-literal": {
      "name": "string.quoted.double.gom",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.gom",
          "match": "\\\\."
        }
      ]
    },
    "numeric-literal": {
      "name": "constant.numeric.gom",
      "match": "\\b\\d+(?:\\.\\d+)?\\b"
    },
    "boolean-literal": {
      "name": "constant.language.boolean.gom",
      "match": "\\b(true|false)\\b"
    },
    "primitive-types": {
      "name": "storage.type.primitive.gom",
      "match": "\\b(int|bool|float|str|void)\\b"
    },
    "composite-types": {
      "patterns": [
        {
          "name": "storage.type.composite.gom",
          "match": "\\bList\\s*<[^>]+>"
        },
        {
          "name": "storage.type.composite.gom",
          "match": "\\bstruct\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.type.gom",
          "match": "\\b(type)\\b"
        },
        {
          "name": "keyword.declaration.function.gom",
          "match": "\\b(function)\\b"
        },
        {
          "name": "keyword.declaration.variable.gom",
          "match": "\\b(let|const)\\b"
        },
        {
          "name": "keyword.control.gom",
          "match": "\\b(if|else|for|while|return|break|continue)\\b"
        },
        {
          "name": "keyword.operator.logical.gom",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.gom",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.gom",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.gom",
          "match": "(\\+|-|\\*|/|\\^)"
        },
        {
          "name": "keyword.operator.logical.gom",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "punctuation.separator.gom",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.bracket.gom",
          "match": "[()\\[\\]{}]"
        },
        {
          "name": "punctuation.accessor.gom",
          "match": "\\."
        }
      ]
    },
    "function-call": {
      "name": "meta.function.call.gom",
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": {
          "name": "entity.name.function.gom"
        }
      }
    },
    "struct-literal": {
      "name": "meta.struct.literal.gom",
      "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\{",
      "beginCaptures": {
        "1": {
          "name": "entity.name.type.struct.gom"
        }
      },
      "end": "\\}",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#struct-field"
        },
        {
          "include": "#expressions"
        }
      ]
    },
    "struct-field": {
      "name": "meta.struct.field.gom",
      "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
      "captures": {
        "1": {
          "name": "variable.other.property.gom"
        }
      }
    },
    "list-literal": {
      "name": "meta.list.literal.gom",
      "begin": "\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#expressions"
        }
      ]
    }
  },
  "scopeName": "source.gom"
}
